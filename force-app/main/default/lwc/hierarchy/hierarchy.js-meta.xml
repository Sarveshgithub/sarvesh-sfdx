<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage, lightning__HomePage, lightning__AppPage,lightning__FlowScreen">
            <property name="iconName" type="String" required="true" label="Enter Icon Name" default="standard:hierarchy" />
            <property name="title" type="String" required="true" label="Enter Title" default="Hierarchy" />
            <property name="objectName" type="String" required="true" label="Enter Object API Name" />
            <property name="gridColumns" type="String" required="true" label="Enter Columns JSON" />
            <property name="parentField" type="String" default="" label="Enter Parent field API Name" />
            <property name="recordId" type="String" default="" label="Enter Top most Parent Id ( Only for Screen Flow )" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>